<h1 class="title">Vista de productos</h1>
{{#if productos}}
<table class="table table-dark">
  <thead>
    <th>Nombre</th>
    <th>Precio</th>
    <th>Foto</th>
  </thead>
  <tbody>
    {{#each productos}}
        <tr>
            <td>{{this.title}}</td>
            <td>$ {{this.price}}</td>
            <td><img src="{{this.thumbnail}}" alt="imagen"></td>
        </tr>
    {{/each}}
  </tbody>
  {{else}}
    <div class="alert alert-warning" role="alert">
      No se encontraron productos
    </div>
  {{/if}}
</table>